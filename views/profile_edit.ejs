<!-- views/profile_edit.ejs -->
<%- include('partials/header') %>

<body>
    <main>
        <nav class="navbar navbar-expand-lg navbar-custom">
            <div class="container-fluid">
                <div class="navbar-brand">
                    <a href="/" style="text-decoration: none; color: black;">Projeto Express</a>
                </div>
            </div>
            <div class="justify-content-end" id="navbarNav">
                <ul class="navbar-nav">
                    <div class="d-flex justify-content-center me-2">
                        <a href="/profile" class="btn btn-light">Perfil</a>
                    </div>
                    <div class="d-flex justify-content-center me-2">
                        <a href="/auth/register" class="btn btn-light">Registrar</a>
                    </div>
                    <div class="d-flex justify-content-center">
                        <form action="/auth/logout" method="post">
                            <button type="submit" class="btn btn-light">Logout</button>
                        </form>
                    </div>
                </ul>
            </div>
        </nav>

    <div class="container mt-5">
        <h2>Editar Perfil</h2>
        <form action="/profile/edit" method="post">
            <div class="mb-3">
                <label for="name" class="form-label">Nome</label>
                <input type="text" class="form-control" id="name" name="name" value="<%= user.name %>">
            </div>
            <div class="mb-3">
                <label for="birthday" class="form-label">Data de Aniversário</label>
                <input type="date" class="form-control" id="birthday" name="birthday" value="<%= user.birthday ? user.birthday.toISOString().split('T')[0] : '' %>">
            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Localização</label>
                <input type="text" class="form-control" id="location" name="location" value="<%= user.location %>">
            </div>
            <div class="mb-3">
                <label for="bio" class="form-label">Bio</label>
                <textarea class="form-control" id="bio" name="bio" rows="3"><%= user.bio %></textarea>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="email" value="<%= user.email %>">
            </div>
            <div class="mb-3">
                <label for="phone" class="form-label">Telefone</label>
                <input type="text" class="form-control" id="phone" name="phone" value="<%= user.phone %>">
            </div>
            <div class="mb-3">
                <label for="education" class="form-label">Formação Acadêmica</label>
                <input type="text" class="form-control" id="education" name="education" value="<%= user.education %>">
            </div>
            <button type="submit" class="btn btn-primary">Salvar</button>
            <a href="/profile" class="btn btn-secondary">Cancelar</a>
        </form>
    </div>
</main>

    <%- include('partials/footer') %>
    
</body>
</html>
